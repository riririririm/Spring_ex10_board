<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ProductMapper">

	<select id="getSelect" parameterType="ProductVO" resultMap="listResult">
		select P.*, T.fname, T.oname, T.num, O.num as Onum, O.contents  
		from product P Full join thumbnail T
		on (P.pid = T.pid)
		Full join Options O
		on (P.pid = O.pid)
		where P.pid=#{pid} 
	</select>
	
	<select id="getCount" resultType="Integer"
		parameterType="PageMaker">
		select count(pid) from product
		where
		<choose>
			<when test="kind ==1">
				title like '%'||#{search}||'%'
			</when>
			<when test="kind== 2">
				mainContents like '%'||#{search}||'%'
			</when>
			<otherwise>
				title like '%'||#{search}||'%' or mainContents like '%'||#{search}||'%'
			</otherwise>
		</choose>
	</select>

	<resultMap type="ProductVO" id="listResult">
		<id property="pid" column="pid" />
		<result property="category" column="category" />
		<result property="title" column="title" />
		<result property="price" column="price" />
		<result property="subContents" column="subContents" />
		<result property="mainContents" column="mainContents" />
		<result property="amount" column="amount" />
		<result property="reg_date" column="reg_date" />
		<collection property="nailVOs" javaType="list"
			ofType="ThumbnailVO">
			<id property="num" column="num" />
			<result property="fname" column="fname" />
			<result property="oname" column="oname" />
		</collection>
		<collection property="optionsVOs" javaType="List" ofType="OptionsVO">
			<id property="num" column="onum"/>
			<result property="contents" column="contents"/>
		</collection>
	</resultMap>
	<select id="getList" parameterType="pageMaker"
		resultMap="listResult">
		select * from
		(select rownum R, Products.* from
		(select P.*, T.num,
		T.fname, T.oname
		from product P FULL JOIN thumbnail T
		on (P.pid = T.pid)
		where
		<choose>
			<when test="kind==1">
				P.title like '%'||#{search}||'%'
			</when>
			<when test="kind==2">
				P.mainContents like '%'||#{search}||'%'
			</when>
			<otherwise>
				P.mainContents like '%'||#{search}||'%' or P.title like '%'||#{search}||'%'
			</otherwise>
		</choose>
		order by P.reg_date desc) Products)
		where R between #{startRow} and
		#{lastRow}
	</select>

	<insert id="setWrite" parameterType="ProductVO">
		insert into product
		values(#{pid},#{category},#{title},#{price},#{subContents},#{mainContents},#{amount},sysdate)
	</insert>
</mapper>